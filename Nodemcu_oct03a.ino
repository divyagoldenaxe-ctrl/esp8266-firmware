/*
  Since Ota is READ_WRITE variable, onOtaChange() is
  executed every time a new value is received from IoT Cloud.
*/
void onOtaChange() {
  if (ota) {
    Serial.println("Starting OTA update...");

    WiFiClient client;
    t_httpUpdate_return ret = ESPhttpUpdate.update(
      client,
      "https://raw.githubusercontent.com/divyagoldenaxe-ctrl/esp8266-firmware1/main/bin.ino.nodemcu.bin"
    );

    switch (ret) {
      case HTTP_UPDATE_OK:
        Serial.println("Update successful, rebooting...");
        break;

      case HTTP_UPDATE_FAILED:
        Serial.printf("Update failed! Error: %s\n", ESPhttpUpdate.getLastErrorString().c_str());
        break;

      case HTTP_UPDATE_NO_UPDATES:
        Serial.println("No update available.");
        break;
    }

    ota = false;  // Reset toggle
  }
}
